
<div data-role="page" id="showPage">
    <div data-role="header" data-position="fixed">
        <h1>我的日报</h1>
        <a href="#mypanel" data-icon="gear" class="ui-btn-right">设置</a>
    </div>
    <div data-role="content">
        <article id="reportList" >
            <ul></ul>
        </article>
        <div class="ui-grid-d pageination">
            <div class="ui-block-a aligncenter" title="前一页"><div class="pagePre" ><button data-icon="arrow-l" data-iconpos="notext" data-inline="true"></button></div></div>
            <div class="ui-block-b"></div>
            <div class="ui-block-c pagetip">1/1</div>
            <div class="ui-block-d"></div>
            <div class="ui-block-e aligncenter" title="下一页"><div class="pageNext" ><button data-icon="arrow-r" data-iconpos="notext" data-inline="true"></button></div></div>
        </div>
    </div>

    <div data-role="footer" data-position="fixed">
         <div data-role="navbar" data-iconpos="left">
             <ul>
                 <li><a href="/m/write" data-icon="edit">写日报</a></li>
                 <li><a href="#" data-icon="bars" class="ui-btn-active">我的日报</a></li>
                 {{#if hasSubordinate}}
                 <li><a href="/m/showsubordinate" data-icon="grid">下属日报</a></li>
                 {{/if}}
             </ul>
         </div>
    </div>
    <div data-role="panel" id="mypanel">
        <ul data-role="listview" data-inset="true" data-theme="e">
            <li><a href="/m/password">修改密码</a></li>
            <li><a href="/m/logout">退出登录</a> </li>
        </ul>
    </div>
    <div data-role="popup" id="deleteReportMenu" data-theme="a">
        <div style="padding: 20px;">
            <button id="deleteReportBtn" value="删除日报" data-theme="b"></button>
            <button id="cancelDeleteReportBtn" value="取消" data-theme="e"></button>
        </div>
    </div>
</div>
<script>
    $("#showPage").bind("pagecreate", function(e) {
        init();
    });
</script>