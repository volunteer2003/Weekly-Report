<div data-role="page" id="passwordPage">
    <div data-role="header">
        <h1>修改密码</h1>
        <a href="#mypanel" data-icon="gear" class="ui-btn-right">设置</a>
    </div>
    <div data-role="content">

        <div data-role="fieldcontain">
            <label for="oldPassword">旧密码:</label>
            <input type="password" id="oldPassword" name="oldPassword"
                placeholder="输入原始密码" />
        </div>

        <div data-role="fieldcontain">
            <label for="password">新密码:</label>
            <input type="password" id="password" name="password"
                min="7" max="25" placeholder="新密码长度是7-25个字符"/>
        </div>

        <div data-role="fieldcontain">
            <label for="repassword">重复密码:</label>
            <input type="password" id="repassword" name="repassword"
                   min="7" max="25" placeholder="重复输入新密码"/>
        </div>

        <div data-role="fieldcontain">
            <input id="passwordSubmitBtn" type="button" value="提交" class="btn btn-primary"
                data-theme="b"/>
        </div>
    </div>
    <div data-role="footer" data-position="fixed">
        <div data-role="navbar" data-iconpos="left">
            <ul>
                <li><a href="/m/write" data-icon="edit">写日报</a></li>
                <li><a href="/m/show" data-icon="bars">我的日报</a></li>
                {{#if hasSubordinate}}
                <li><a href="/m/showsubordinate" data-icon="grid">下属日报</a></li>
                {{/if}}
            </ul>
        </div>
    </div>
    <div data-role="panel" id="mypanel">
        <ul data-role="listview" data-inset="true" data-theme="e">
            <li><a href="javascript:void(0);">修改密码</a></li>
            <li><a href="/m/logout">退出登录</a> </li>
        </ul>
    </div>
</div>

<div data-role="page" id="passwordErrorPage">
    <div data-role="header">
        <h1>修改密码错误提示</h1>
    </div>
    <div data-role="content">
        <p class="content">密码长度为7-25个字符并且老密码输入必须正确</p>
    </div>
</div>
<script>
    $("#passwordPage").bind("pagecreate", function(e) {
        init();
    });
</script>